# Application Configuration
# Copy this to backend/.env and update with your actual values

# Database
# NOTE: Credentials must match POSTGRES_* variables in root .env
DATABASE_URL=postgresql+asyncpg://backend_user:backend_password@postgres:5432/backend_db

# Redis
REDIS_URL=redis://redis:6379/0

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Add your frontend URLs here
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# App
PROJECT_NAME=Backend API
VERSION=0.1.0
API_V1_PREFIX=/api/v1
