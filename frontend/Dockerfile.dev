FROM node:24-alpine

# Accept version as build argument (optional for dev)
ARG VERSION=0.0.0

# Add version metadata to the image
LABEL org.opencontainers.image.version="${VERSION}" \
      org.opencontainers.image.title="Frontend (Development)" \
      org.opencontainers.image.description="React frontend application - development build"

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

EXPOSE 5173

# Run dev server with host flag to allow external connections
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
